<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/orange_500</item>

        <item name="android:actionModeBackground">@color/blue_700</item>
        <item name="android:windowBackground">@color/grey_50</item>



    </style>

    <!-- Application Theme -->
    <style name="Theme.AppTheme.NoActionBar" parent="Theme.AppTheme">
        <!-- The drawer needs to set the status bar color manually -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/color_white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>


